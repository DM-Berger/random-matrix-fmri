@article{starckCorrectionLowfrequencyPhysiological2010,
  title = {Correction of Low-Frequency Physiological Noise from the Resting State {{BOLD fMRI}}\textemdash{{Effect}} on {{ICA}} Default Mode Analysis at 1.{{5T}}},
